{
  "private": true,
  "name": "@miniflare/root",
  "version": "3.0.0-next.2",
  "description": "Fun, full-featured, fully-local simulator for Cloudflare Workers",
  "keywords": [
    "cloudflare",
    "workers",
    "worker",
    "local",
    "cloudworker"
  ],
  "author": "MrBBot <me@mrbbot.dev>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf './packages/*/dist' './dist'",
    "build": "node scripts/build.mjs",
    "types:build": "tsc",
    "types:bundle": "npm run types:build && node scripts/types.mjs",
    "dev": "node scripts/build.mjs watch",
    "test": "npm run build && ava && rimraf ./.tmp",
    "lint": "eslint 'packages/*/{src,test}/**/*.ts' 'scripts/**/*.{js,mjs}' 'types/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run lint && npm run clean && npm run build && npm run types:bundle && npm run test",
    "helpers:scaffold": "node scripts/scaffold.mjs",
    "helpers:version": "node scripts/version.mjs",
    "capnp:workerd": "capnpc -o ts packages/tre/src/runtime/config/workerd.capnp"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@microsoft/api-extractor": "^7.19.4",
    "@types/better-sqlite3": "^7.6.2",
    "@types/node": "^17.0.35",
    "@types/rimraf": "^3.0.2",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "ava": "^5.0.1",
    "capnpc-ts": "^0.7.0",
    "esbuild": "^0.12.20",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^3.4.1",
    "esm": "^3.2.25",
    "patch-package": "^6.4.7",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "which": "^2.0.2"
  },
  "engines": {
    "node": ">=16.13"
  },
  "volta": {
    "node": "18.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^7.6.2"
  }
}
