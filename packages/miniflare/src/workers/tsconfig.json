{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "types": ["@cloudflare/workers-types/experimental"],
    "experimentalDecorators": true,
    "paths": {
      "miniflare:shared": ["./shared/index.worker.ts"],
      "miniflare:zod": ["./shared/zod.worker.ts"],
    }
  },
  "include": [
    "node.d.ts",
    "**/*.worker.ts"
  ],
}
